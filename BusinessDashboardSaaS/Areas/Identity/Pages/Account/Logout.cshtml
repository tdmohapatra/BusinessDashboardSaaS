@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #4361ee;
        --primary-dark: #3a56d4;
        --secondary-color: #3f37c9;
        --text-color: #2b2d42;
        --light-color: #f8f9fa;
    }

    .logout-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--light-color);
        position: relative;
        overflow: hidden;
    }

    .logout-container {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 420px;
        margin: 2rem auto;
        padding: 2.5rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        animation: fadeInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1);
    }

        .logout-container h1 {
            font-size: 1.8rem;
            color: var(--text-color);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .logout-container p {
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

    .btn-logout {
        background-color: var(--primary-color);
        border: none;
        height: 48px;
        border-radius: 8px;
        font-weight: 600;
        padding: 0 1.5rem;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-logout:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }

    /* Animation */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive */
    @@media(max - width: 576px)

    {
        .logout-container

    {
        padding: 1.5rem;
        margin: 1rem;
    }

    .logout-container h1 {
        font-size: 1.5rem;
    }

    }
</style>

<div class="logout-page">
    <div class="logout-container">
        <h1>Log out</h1>

        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <p>Are you sure you want to log out?</p>
                <form class="d-inline-block" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-logout">Click here to Logout</button>
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
                <a href="/Identity/Account/Login" class="btn btn-logout mt-3">Return to Login</a>
            }
        }
    </div>
</div>
